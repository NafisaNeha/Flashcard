<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" fx:id="scenePane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="flashcard.NewFlashCardController">
   <children>
      <Label alignment="CENTER" layoutX="37.0" layoutY="110.0" prefHeight="36.0" prefWidth="107.0" style="-fx-background-color: #dfe6e9;" text="Question">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="quesText" alignment="TOP_LEFT" layoutX="160.0" layoutY="79.0" prefHeight="98.0" prefWidth="390.0" promptText="Question here">
         <font>
            <Font name="Bell MT Italic" size="13.0" />
         </font>
      </TextField>
      <Label alignment="CENTER" layoutX="37.0" layoutY="231.0" prefHeight="36.0" prefWidth="107.0" style="-fx-background-color: #dfe6e9;" text="Answer">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="ansText" alignment="TOP_LEFT" layoutX="160.0" layoutY="200.0" prefHeight="98.0" prefWidth="390.0" promptText="Answer Here">
         <font>
            <Font name="Bell MT Italic" size="13.0" />
         </font>
      </TextField>
      <Button layoutX="239.0" layoutY="321.0" mnemonicParsing="false" onAction="#nextCard" prefHeight="36.0" prefWidth="161.0" style="-fx-background-color: #dfe6e9;" text="Next Card">
         <font>
            <Font name="Bell MT Bold" size="14.0" />
         </font>
      </Button>
      <MenuBar fx:id="mainMenu" layoutY="27.0" prefHeight="25.0" prefWidth="603.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#SaveFile" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#goToMenu" text="Home" />
                  <MenuItem mnemonicParsing="false" onAction="#endProgram" text="Exit" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
   </children>
</AnchorPane>
